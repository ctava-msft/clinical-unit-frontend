# Azure AD Configuration - REQUIRED
VITE_AZURE_CLIENT_ID=clientid-here
VITE_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id-here
VITE_AZURE_REDIRECT_URI=http://localhost:5173

# Optional Azure AD Configuration
VITE_AZURE_DOMAIN_HINT=your-domain.com

# API Configuration
VITE_API_URL=http://localhost:8000

# Security Group Configuration - REQUIRED for authorization
VITE_CLINICAL_STAFF_GROUP_ID=your-clinical-staff-group-object-id
VITE_ADMIN_GROUP_ID=your-admin-group-object-id

# Optional API Scope Configuration
VITE_API_SCOPE=api://your-client-id/access_as_user
